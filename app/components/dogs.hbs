<div class="dogs">
  <form {{on "input" this.updateQuery}} {{on "submit" this.handleSubmit}}>
    <label>
      <span>Search for dog</span>
      <input name="dog-search-term" class="light">
    </label>
    <p>The results below will update as you type.</p>
    <p>{{this.query}}</p>
  </form>

  <ul class="results">
    <Dogs::Filter @dogs={{@dogs}} @query={{this.query}} as |results|>
      {{#each results as |dog|}}
        <li><Dog @dog={{dog}} /></li>
      {{/each}}
    </Dogs::Filter>
  </ul>
</div>